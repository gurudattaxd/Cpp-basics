{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "compile",
        "type": "shell",
        "command": "g++",
        "args": [
          "-std=c++17",
          "-o",
          "${fileBasenameNoExtension}.exe",
          "${file}"
        ],
        "group": {
          "kind": "build",
          "isDefault": false
        }
      },
      {
        "label": "compile and run",
        "type": "shell",
        "command": "powershell",
        "args": [
          "-Command",
          "g++ -std=c++17 -o \"${fileBasenameNoExtension}.exe\" \"${file}\"; if ($?) { Get-Content input.txt | .\\${fileBasenameNoExtension}.exe | Set-Content output.txt }"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  